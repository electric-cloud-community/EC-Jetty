<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#RunJetty</help>
    <formElement>
        <label>Jetty home folder:</label>
        <property>JettyHome</property>
        <documentation>Absolute path where jetty files and folders are located.</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Action to perform:</label>
        <property>Action</property>
        <value>start</value>
        <documentation>Choose the action to perform when you run the procedure.</documentation>
        <required>1</required>
        <type>select</type>
        <option><name>Start Jetty</name><value>start</value></option>
        <option><name>Stop Jetty</name><value>stop</value></option>
    </formElement>
    <formElement>
        <type>checkbox</type>
        <label>Debug mode</label>
        <property>Debug</property>
        <checkedValue>1</checkedValue>
        <uncheckedValue>0</uncheckedValue>
        <required>0</required>
        <value>1</value>
        <documentation>If checked, enables debug mode.</documentation>
    </formElement>
    <formElement>
        <label>Additional commands:</label>
        <property>AdditionalCommands</property>
        <documentation>Provide any additional command to add to the command line.</documentation>
        <required>0</required>
        <type>textarea</type>
    </formElement>
</editor>
